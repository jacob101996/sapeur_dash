                                </div><!--/ .table_row -->

                            </div><!--/ .table_layout -->

                            <footer class="bottom_box">

                                <div class="buttons_row">

                                    <button type="submit" class="button_blue middle_btn">Search</button>

                                    <button type="reset" class="button_grey middle_btn filter_reset">Reset</button>

                                </div>

                            </footer>

                        </form>

                    </section>

                    <!-- - - - - - - - - - - - - - End of filter - - - - - - - - - - - - - - - - -->

                    <!-- - - - - - - - - - - - - - Banner - - - - - - - - - - - - - - - - -->

