{% extends 'base_admin.html.twig' %}

{% block title %}SAPEUR DE BABY - ADMIN{% endblock %}

{% block content %}

    <section class="mb-5">
        <div class="row">
            <div class="col left">Accueil > Produit > <span class="grey-text">Ajout de produit</span></div>
        </div>

        {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
            {% for message in messages %}
                <div style="font-size: 17px !important;" class="alert alert-{{ label }} p-3 alert-dismissible fade show text-left" role="alert" id="alertMsg">
                    {{ message|raw }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" class="text-dark">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Card -->
        <div class="card card-cascade narrower p-5">

            <div class="card-body">
                <h2>Ajout de produit</h2>
                <hr class="mb-5"/>
                {{ form_start(form) }}
                <!-- Grid row -->
                <div class="row border p-2 pt-4">
                    <div class="col-md-7 form-group">{{ form_row(form.category) }}</div>
                    <div class="col-md-5 form-group">{{ form_row(form.sub_category) }}</div>
                    <div class="col-md-7 form-group">{{ form_row(form.product_name) }}</div>
                    <div class="col-md-5 form-group">{{ form_row(form.product_price) }}</div>
                    <div class="col-md-6 form-group">{{ form_row(form.product_reduction) }}</div>
                    <div class="col-md-6 form-group">{{ form_row(form.product_size) }}</div>
                    <div class="col-md-8 form-group">{{ form_row(form.product_color) }}</div>
                    <div class="col-md-4 form-group">{{ form_row(form.product_stock) }}</div>
                    <div class="col-md-12 form-group">{{ form_row(form.product_description) }}</div>
                </div>
                <div class="row border p-2 pt-4 mt-4">
                    <div class="col-md-6 form-group">{{ form_row(form.product_image) }}</div>
                    <div class="col-md-6 form-group">{{ form_row(form.product_image1) }}</div>
                    <div class="col-md-6 form-group">{{ form_row(form.product_image2) }}</div>
                    <div class="col-md-6 form-group">{{ form_row(form.product_image3) }}</div>
                </div>
                <div class="col-md-12 mt-3">
                    <button type="submit" class="btn btn-warning"><i class="fas fa-check-circle mr-2"></i>Enregistrer</button>
                </div>
                <!-- Grid row -->
                {{ form_end(form) }}
            </div>

        </div>
        <!-- Card -->

    </section>
{% endblock %}
