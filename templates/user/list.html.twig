{% extends 'base_admin.html.twig' %}

{% block title %}SAPEUR DE BABY - ADMIN{% endblock %}

{% block content %}

    <section>

        <!-- Gird column -->
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <div class="row text-dark">
                        <div class="col-md-12">
                            {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                                {% for message in messages %}
                                    <div style="font-size: 17px !important;" class="alert alert-{{ label }} p-3 alert-dismissible fade show text-left" role="alert" id="alertMsg">
                                        {{ message|raw }}
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true" class="text-dark">&times;</span>
                                        </button>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="row text-dark">
                        <div class="col-md-8"><h4 class="dark-grey-text">Liste des utilisateurs</h4></div>
                        <div class="col-md-4 mt-2 text-right">
                            <a href="{{ path('user_add') }}" title="Ajout d'utilisateur"><i class="fas fa-plus-circle
                            text-info mr-3" style="font-size: 25px"></i></a>
                            <a href="{{ path('user_list') }}" title="Liste des utilisteurs"><i class="fas fa-list-alt
                             text-danger" style="font-size: 25px"></i></a>
                        </div>
                    </div>
                    <hr/>
                    <table id="dtMaterialDesignExample" class="table table-striped" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <th >Adresse email</th>
                            <th >RÃ´le</th>
                            <th width="15%">#Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in items %}
                            <tr>
                                <td>{{ user.username|capitalize }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if user.roles.0 == "ROLE_ADMIN" %}
                                        <span>Administrateur</span>
                                    {% elseif  user.roles.0 == "ROLE_PARTNER" %}
                                        <span>Partenaire</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if app.user.roles.0 in ['ROLE_ADMIN', 'ROLE_SUPER_ADMIN'] %}
                                        <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-pen-alt text-info mr-4 mt-2" title="Modifier" style="font-size: 20px"></i></a>
                                        <a href="{{ path('user_delete', {'id': user.id}) }}"><i class="far fa-trash-alt text-danger mt-2" style="font-size: 20px"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>

        </div>
        <!-- Gird column -->

    </section>
    <!-- Section: Basic examples -->
{% endblock %}
